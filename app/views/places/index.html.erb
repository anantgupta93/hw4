
<div class="mt-3">
  <h2>Places </h2>
  <%= link_to 'Add New Place', new_place_path, class: 'btn btn-success mb-3' %>

  <% if @places.present? %>
    <% @places.order(created_at: :desc).each do |place| %>
      <div class="mb-3">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to place.name, place_entries_path(place) %>
          </h5>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No places available.</p>
  <% end %>
</div>
