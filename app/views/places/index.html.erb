<%# app/views/places/index.html.erb %>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if current_user %>
  <h1>Welcome, <%= current_user.username %></h1>
  <%= link_to 'Add New Place', new_place_path, class: 'btn btn-primary' %>
<% end %>

<div class="mt-3">
  <h2>Places List</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td><%= place.name %></td>
          <td>
            <%= link_to 'Show', place_path(place), class: 'btn btn-info' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
