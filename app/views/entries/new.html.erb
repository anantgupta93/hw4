<!-- app/views/entries/_form.html.erb -->
<%= form_with(model: @entry, url: place_entries_path(@place), local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  
  <div class="field">
    <%= form.label :occurred_on %>
    <%= form.date_field :occurred_on %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  
  <%= form.submit %>
<% end %>
